<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KhaataBook</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="h-screen p-4   w-screen bg-zinc-800">
        <div class="flex justify-between">
    <h1 class="text-green-500">KhaataBook</h1>
    <a class="text-yellow-500 mr-10 " href="/create">Create</a>
        </div>

        <% files.forEach(function(file){ %>
            <div class="h-10 w-1/3 mb-4 flex gap-10 bg-zinc-600 rounded-md py-1 px-3 text-white">
                <h4><%= file%></h4>
                <a class="text-blue-500" href="/view/<%=file%>">View</a>
                <a class="text-yellow-500" href="/edit/<%=file%>">Edit</a>
                <a class="text-red-500" href="/delete/<%=file%>">Delete</a>

            </div>

        <%  }) %>

    </div>
    
</body>
</html>